    <bean id="mongoDBTemplate" class="net.xuele.common.mongo.dao.multi.MongoDBTemplate">
        <property name="targetMongoTemplates">
            <map key-type="java.lang.String">
                <entry key="mongoMain" value-ref="mongoTemplateMain"></entry>
                <entry key="mongo2015" value-ref="mongoTemplate2015"></entry>
                <entry key="mongo2016" value-ref="mongoTemplate2016"></entry>
                <entry key="mongo2017" value-ref="mongoTemplate2017"></entry>
                <entry key="mongo2018" value-ref="mongoTemplate2018"></entry>
            </map>
        </property>
        <property name="defaultTargetMongoTemplate" ref="mongoTemplateMain"/>
    </bean>


    <bean id="asyncHttpReporter" class="net.xuele.interceptor.AsyncHttpReporterFactoryBean">
        <property name="host" value="${zipkin.url}"/>
    </bean>
    <bean id="brave" class="net.xuele.interceptor.BraveFactoryBean">
        <property name="serviceName" value="${service.name}"/>
        <property name="reporter" ref="asyncHttpReporter"/>
        <property name="sampleRate" value="${sample.ratio}"/>
    </bean>
    <bean id="persistFilterManagementBean" class="net.xuele.interceptor.persist.PersistFilterManagementBean">
        <constructor-arg ref="brave"/>
    </bean>
    <bean id="persistFilter" class="net.xuele.interceptor.persist.PersistFilter"/>
</beans>
